<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_cards"
    android:layout_marginRight="@dimen/margin_cards"
    android:layout_marginTop="@dimen/margin_cards"
    android:layout_marginBottom="@dimen/margin_cards"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_image_height"
            android:scaleType="centerCrop"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="@dimen/margin_card_items"
            android:paddingTop="@dimen/margin_card_items"
            android:paddingRight="@dimen/margin_card_items"
            android:paddingBottom="4dp"
            android:textColor="@android:color/black"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_card_items"
            android:paddingRight="@dimen/margin_card_items"
            android:paddingBottom="4dp"
            android:textColor="#6000"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/article_date"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_card_items"
            android:paddingRight="@dimen/margin_card_items"
            android:paddingBottom="@dimen/margin_card_items"
            android:textColor="#6000"
            android:maxLines="2"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
